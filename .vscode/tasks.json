{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run All Tests (Dev)",
            "type": "shell",
            "command": "./mvnw test -Pdev",
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "Run All Tests (Prod)",
            "type": "shell",
            "command": "./mvnw test -Pprod",
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "Check Formatting",
            "type": "shell",
            "command": "./mvnw spotless:check",
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "Apply Formatting",
            "type": "shell",
            "command": "./mvnw spotless:apply",
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "Maven Build (Prod)",
            "type": "shell",
            "command": "./mvnw clean install -Pprod",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [],
            "dependsOn": ["Check Formatting"]
        },
        {
            "label": "Maven Build (Dev)",
            "type": "shell",
            "command": "./mvnw clean install -Pdev",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "dependsOn": ["Check Formatting"]
        },
        {
            "label": "Run Desktop App (Dev)",
            "type": "shell",
            "command": "./mvnw",
            "args": [
                "-pl",
                "kompeter-app-desktop",
                "exec:java",
                "-D",
                "exec.mainClass=com.github.ragudos.kompeter.app.desktop/com.github.ragudos.kompeter.app.desktop.KompeterDesktopApp",
                "-Pdev"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "dependsOn": ["Maven Build (Dev)"]
        },
        {
            "label": "Run Desktop App (Prod)",
            "type": "shell",
            "command": "./mvnw",
            "args": [
                "-pl",
                "kompeter-app-desktop",
                "exec:java",
                "-D",
                "exec.mainClass=com.github.ragudos.kompeter.app.desktop/com.github.ragudos.kompeter.app.desktop.KompeterDesktopApp",
                "-Pprod"
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": [],
            "dependsOn": ["Maven Build (Prod)"]
        }
    ]
}
